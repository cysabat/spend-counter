<script>
const START_DATE = new Date("2026-01-01T00:00:00").getTime();
const CONFIRMED_DAYS = 5;
const GOAL = 365;

const STORAGE = {
  start:"ns_start",
  record:"ns_record",
  resets:"ns_resets",
  last:"ns_last_reset"
};

function daysBetween(ms){
  return Math.floor(ms/(1000*60*60*24));
}

/* inicializa√ß√£o segura */
function getStart(){
  let s = localStorage.getItem(STORAGE.start);

  if(!s){
    const fixedStart = START_DATE - CONFIRMED_DAYS*86400000;
    localStorage.setItem(STORAGE.start,fixedStart);
    localStorage.setItem(STORAGE.record,CONFIRMED_DAYS);
    localStorage.setItem(STORAGE.resets,0);
    return fixedStart;
  }

  return Number(s);
}

function updateClock(){
  const n = new Date();
  hh.innerText = String(n.getHours()).padStart(2,"0");
  mm.innerText = String(n.getMinutes()).padStart(2,"0");
  ss.innerText = String(n.getSeconds()).padStart(2,"0");
}

function update(){
  const start = getStart();
  let days = daysBetween(Date.now()-start);

  /* corre√ß√£o autom√°tica */
  if(days < CONFIRMED_DAYS && Number(localStorage.getItem(STORAGE.resets)||0) === 0){
    days = CONFIRMED_DAYS;
  }

  counter.innerText = days;

  let record = Number(localStorage.getItem(STORAGE.record)||CONFIRMED_DAYS);
  if(days > record){
    record = days;
    localStorage.setItem(STORAGE.record,record);
  }

  recordEl.innerText = record;
  resets.innerText = localStorage.getItem(STORAGE.resets)||0;

  progressBar.style.width =
    Math.min((days/GOAL)*100,100)+"%";

  const last = localStorage.getItem(STORAGE.last);
  if(last){
    const r = JSON.parse(last);
    lastReset.innerHTML =
      `üßæ √öltimo gasto em <strong>${r.date}</strong><br>
       Item: <strong>${r.item}</strong><br>
       Valor: <strong>R$ ${r.value}</strong>`;
  }
}

function panic(){
  const item = prompt("O que voc√™ comprou?");
  if(!item) return;
  const value = prompt("Qual foi o valor?");
  if(!value) return;

  const now = Date.now();
  localStorage.setItem(STORAGE.start,now);
  localStorage.setItem(STORAGE.last,JSON.stringify({
    date:new Date(now).toLocaleDateString("pt-BR"),
    item:item,
    value:value
  }));

  localStorage.setItem(STORAGE.resets,
    Number(localStorage.getItem(STORAGE.resets)||0)+1
  );

  update();
}

/* DOM refs */
const counter = document.getElementById("counter");
const recordEl = document.getElementById("record");
const resets = document.getElementById("resets");
const progressBar = document.getElementById("progressBar");
const lastReset = document.getElementById("lastReset");
const hh = document.getElementById("hh");
const mm = document.getElementById("mm");
const ss = document.getElementById("ss");

update();
updateClock();
setInterval(updateClock,1000);
setInterval(update,60000);
</script>

</body>
