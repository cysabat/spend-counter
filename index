<div class="subtitle">dias sem gastar</div>

<div class="clock">
  <span id="hh">00</span><span class="colon">:</span>
  <span id="mm">00</span><span class="colon">:</span>
  <span id="ss">00</span>
</div>

<div class="progress">
  <div id="progressBar"></div>
</div>

<div class="stats">
  <div>üèÜ Recorde<br><strong id="record">0</strong></div>
  <div>üîÅ Resets<br><strong id="resets">0</strong></div>
  <div>üìÖ In√≠cio<br><strong>01/01/2026</strong></div>
  <div>üéØ Meta<br><strong>365</strong></div>
</div>

<div class="badges">
  <div class="badge" data-days="30">30</div>
  <div class="badge" data-days="90">90</div>
  <div class="badge" data-days="180">180</div>
  <div class="badge" data-days="365">365</div>
</div>

<div class="history" id="history">
  üéâ Nenhum gasto registrado at√© agora
</div>

<button onclick="panic()">üö® Gastei dinheiro</button>

</div>
</div>

<script>
/* =========================
   CONFIGURA√á√ÉO
========================= */
const START_DATE = new Date("2026-01-01T00:00:00").getTime();
const DAY = 86400000;
const GOAL = 365;

const STORAGE = {
  start: "ns_start",
  inclusive: "ns_inclusive",
  record: "ns_record",
  resets: "ns_resets",
  history: "ns_history",
  init: "ns_init"
};

/* =========================
   UTIL
========================= */
const daysBetween = ms => Math.floor(ms / DAY);

/* =========================
   INIT (uma √∫nica vez)
========================= */
function init(){
  if(localStorage.getItem(STORAGE.init)) return;

  localStorage.setItem(STORAGE.start, START_DATE);
  localStorage.setItem(STORAGE.inclusive, "true"); // contagem inclusiva
  localStorage.setItem(STORAGE.record, "0");
  localStorage.setItem(STORAGE.resets, "0");
  localStorage.setItem(STORAGE.history, "[]");
  localStorage.setItem(STORAGE.init, "true");
}

/* =========================
   ANIMA√á√ÉO DO N√öMERO
========================= */
function animateNumber(el, to){
  const from = Number(el.innerText) || 0;
  const start = performance.now();
  const duration = 500;

  function frame(t){
    const p = Math.min((t - start) / duration, 1);
    el.innerText = Math.floor(from + (to - from) * p);
    if(p < 1) requestAnimationFrame(frame);
  }
  requestAnimationFrame(frame);
}

/* =========================
   REL√ìGIO
========================= */
function updateClock(){
  const n = new Date();
  hh.textContent = String(n.getHours()).padStart(2,"0");
  mm.textContent = String(n.getMinutes()).padStart(2,"0");
  ss.textContent = String(n.getSeconds()).padStart(2,"0");
}

/* =========================
   HIST√ìRICO
========================= */
function renderHistory(){
  const list = JSON.parse(localStorage.getItem(STORAGE.history));
  if(list.length === 0){
    historyEl.textContent = "üéâ Nenhum gasto registrado at√© agora";
    return;
  }

  historyEl.innerHTML =
    "<strong>Hist√≥rico de gastos</strong><ul>" +
    list.map(h =>
      `<li>${h.date} ‚Äî ${h.item} (R$ ${h.value})</li>`
    ).join("") +
    "</ul>";
}

/* =========================
   UPDATE PRINCIPAL
========================= */
function update(){
  const start = Number(localStorage.getItem(STORAGE.start));
  const inclusive = localStorage.getItem(STORAGE.inclusive) === "true";

  let days = daysBetween(Date.now() - start);
  if(inclusive) days += 1;

  animateNumber(counter, days);

  let record = Number(localStorage.getItem(STORAGE.record));
  if(days > record){
    record = days;
    localStorage.setItem(STORAGE.record, record);
  }

  recordEl.textContent = record;
  resetsEl.textContent = localStorage.getItem(STORAGE.resets);

  progressBar.style.width =
    Math.min((days / GOAL) * 100, 100) + "%";

  document.querySelectorAll(".badge").forEach(b => {
    if(days >= Number(b.dataset.days)){
      b.classList.add("active");
    }
  });

  renderHistory();
}

/* =========================
   RESET REAL
========================= */
function panic(){
  const item = prompt("O que voc√™ comprou?");
  if(!item) return;

  const value = prompt("Qual foi o valor?");
  if(!value) return;

  const now = Date.now();

  const history = JSON.parse(localStorage.getItem(STORAGE.history));
  history.unshift({
    date: new Date(now).toLocaleDateString("pt-BR"),
    item,
    value
  });

  localStorage.setItem(STORAGE.history, JSON.stringify(history));
  localStorage.setItem(STORAGE.start, now);
  localStorage.setItem(STORAGE.inclusive, "false");
  localStorage.setItem(
    STORAGE.resets,
    String(Number(localStorage.getItem(STORAGE.resets)) + 1)
  );

  update();
}

/* =========================
   DOM
========================= */
const counter = document.getElementById("counter");
const recordEl = document.getElementById("record");
const resetsEl = document.getElementById("resets");
const progressBar = document.getElementById("progressBar");
const historyEl = document.getElementById("history");
const hh = document.getElementById("hh");
const mm = document.getElementById("mm");
const ss = document.getElementById("ss");

/* =========================
   BOOT
========================= */
init();
update();
updateClock();
setInterval(updateClock, 1000);
setInterval(update, 60000);
</script>

</body>
</html>
