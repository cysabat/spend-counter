<div class="wrapper">
<div class="card">

<h1>üí∞ Dias sem gastar dinheiro</h1>

<div class="counter" id="counter">0</div>
<div class="subtitle">dias sem gastar</div>

<div class="clock">
  <span id="hh">00</span><span class="colon">:</span>
  <span id="mm">00</span><span class="colon">:</span>
  <span id="ss">00</span>
</div>

<div class="progress"><div id="progressBar"></div></div>

<div class="stats">
  <div>üèÜ Recorde<br><strong id="record">0</strong></div>
  <div>üîÅ Resets<br><strong id="resets">0</strong></div>
  <div>üìÖ In√≠cio<br><strong>01/01/2026</strong></div>
  <div>üéØ Meta<br><strong>365</strong></div>
</div>

<div id="lastReset" class="last-reset">
üéâ Nenhum gasto registrado at√© agora
</div>

<button onclick="panic()">üö® Gastei dinheiro</button>

</div>
</div>

<script>
/* CONFIGURA√á√ÉO */
const INITIAL_START = new Date("2026-01-01T00:00:00").getTime();
const GOAL = 365;

const STORAGE = {
  start:"ns_start",
  inclusive:"ns_inclusive",
  record:"ns_record",
  resets:"ns_resets",
  last:"ns_last",
  init:"ns_init"
};

/* util */
const DAY = 86400000;
const daysBetween = ms => Math.floor(ms / DAY);

/* init seguro */
function init(){
  if(localStorage.getItem(STORAGE.init)) return;

  localStorage.setItem(STORAGE.start, INITIAL_START);
  localStorage.setItem(STORAGE.inclusive, "true"); // contagem inclusiva
  localStorage.setItem(STORAGE.record, 0);
  localStorage.setItem(STORAGE.resets, 0);
  localStorage.setItem(STORAGE.init, "true");
}

/* rel√≥gio */
function updateClock(){
  const n = new Date();
  hh.textContent = String(n.getHours()).padStart(2,"0");
  mm.textContent = String(n.getMinutes()).padStart(2,"0");
  ss.textContent = String(n.getSeconds()).padStart(2,"0");
}

/* update principal */
function update(){
  const start = Number(localStorage.getItem(STORAGE.start));
  const inclusive = localStorage.getItem(STORAGE.inclusive) === "true";

  let days = daysBetween(Date.now() - start);
  if(inclusive) days += 1; // <<< CORRE√á√ÉO CHAVE

  counter.textContent = days;

  let record = Number(localStorage.getItem(STORAGE.record));
  if(days > record){
    record = days;
    localStorage.setItem(STORAGE.record, record);
  }

  recordEl.textContent = record;
  resetsEl.textContent = localStorage.getItem(STORAGE.resets);

  progressBar.style.width =
    Math.min((days / GOAL) * 100, 100) + "%";

  const last = localStorage.getItem(STORAGE.last);
  if(last){
    const r = JSON.parse(last);
    lastReset.innerHTML =
      `üßæ √öltimo gasto em <strong>${r.date}</strong><br>
       Item: <strong>${r.item}</strong><br>
       Valor: <strong>R$ ${r.value}</strong>`;
  }
}

/* reset real */
function panic(){
  const item = prompt("O que voc√™ comprou?");
  if(!item) return;

  const value = prompt("Qual foi o valor?");
  if(!value) return;

  const now = Date.now();

  localStorage.setItem(STORAGE.start, now);
  localStorage.setItem(STORAGE.inclusive, "false"); // ap√≥s reset = exclusivo
  localStorage.setItem(STORAGE.last, JSON.stringify({
    date: new Date(now).toLocaleDateString("pt-BR"),
    item,
    value
  }));

  localStorage.setItem(
    STORAGE.resets,
    Number(localStorage.getItem(STORAGE.resets)) + 1
  );

  update();
}

/* DOM */
const counter = document.getElementById("counter");
const recordEl = document.getElementById("record");
const resetsEl = document.getElementById("resets");
const progressBar = document.getElementById("progressBar");
const lastReset = document.getElementById("lastReset");
const hh = document.getElementById("hh");
const mm = document.getElementById("mm");
const ss = document.getElementById("ss");

/* boot */
init();
update();
updateClock();
setInterval(updateClock, 1000);
setInterval(update, 60000);
</script>

</body>
</html>
